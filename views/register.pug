doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  title Register
  script(src='https://cdnjs.cloudflare.com/ajax/libs/vue/3.2.33/vue.cjs.js')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' ,rel='stylesheet', integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js', crossorigin='anonymous')
  link(href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css' ,rel='stylesheet')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/vue/1.0.11/vue.js')
  link(rel='stylesheet' ,type='text/css', href='/scss/styles.css')
  link(rel='stylesheet', type='text/css' ,href='/scss/register.css')
header.row
  nav.navbar.navbar-expand-lg.navbar-dark
    .container-fluid
      a.navbar-brand(href='/home') Nerya LLC
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#main_nav' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #main_nav.navbar-collapse.collapse
        ul.navbar-nav
          li.nav-item
            a.nav-link(href='/catalog')
              i.fa-solid.fa-book
              |  Catalog
          li.nav-item
            a.nav-link(href='/contact')
              i.fa-solid.fa-envelope
              |  Contact
        ul.navbar-nav.ms-auto
          li.nav-item
            a.nav-link(href='/login')
              i.fa-solid.fa-user
              |  Log In / Register
main
  #registerPage.container
    h2 Create Account
    -data = data || {}
    if errors
        ul.my-errors
        for error in errors
            li= error.msg
    
    form.needs-validation(action='/register' method='post' novalidate='')
      span.form-text.text-muted  STEP 1 of 3 
      h3 Account Details
      .row
        .form-group.col
          label(for='firstname') First Name
          input#firstname.form-control(type='text' name='firstname' placeholder='John' value=data.firstname)
        .form-group.col
          label(for='lastname') Last Name
          input#lastname.form-control(type='text' name='lastname' placeholder='Doe' value=data.lastname)
      .row
        .form-group.col
          label(for='contactEmail') Contact Email
          input#contactEmail.form-control(type='email' name='email' aria-describedby='emailHelp' placeholder='your-email@hurizun.com' value=data.email)
        .form-group.col
          label(for='contactPhone') Contact Phone
          input#contactPhone.form-control(type='tel' name='contactPhone' aria-describedby='telHelp' placeholder='(123) 456 7890' value=data.contactPhone)
        span#emailHelp.form-text.text-muted
          | Used for account login and purchase order notification
      .row
        .form-group.col-6
          label(for='username') Enter Username
          input#password1.form-control(type='username' name='username' placeholder='Username' value=data.username)
        .form-group.col-6
          label(for='password') Enter Password
          input#password2.form-control(type='password' name='password' placeholder='Password' value=data.password)
      #checkbox.form-check
        input#formCheckWholesale.form-check-input(type='checkbox' required='')
        label.form-check-label(for='formCheckWholesale')
          | I am signing up as a wholesale partner
      button.btn.btn-warning(type='submit' value='Submit' required='')
        | Submit
      label#error-message
script(src='/toy-catalog/public/js/register.js')
script(src='https://cdn.jsdelivr.net/npm/vue@2.6.12/dist/vue.js')
